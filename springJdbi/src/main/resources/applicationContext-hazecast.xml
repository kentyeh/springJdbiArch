<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hz="http://www.hazelcast.com/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.hazelcast.com/schema/spring https://hazelcast.com/schema/spring/hazelcast-spring-3.7.xsd">
    <hz:hazelcast id="hazelcastInstance">
        <hz:config>
            <hz:spring-aware />
            <hz:group name="hazecast" password="hazecast"/>
            <hz:network port="5701" port-auto-increment="false">
                <hz:join>
                    <hz:multicast enabled="false"/>
                    <hz:tcp-ip enabled="true">
                        <hz:members>192.168.10.72,192.168.10.74</hz:members>
                    </hz:tcp-ip>
                </hz:join> 
            </hz:network>
            <hz:map name="spring:session:sessions" time-to-live-seconds="1800"/>
            <hz:serialization>
                <hz:serializers>
                    <hz:serializer type-class="java.lang.Object" class-name="com.github.kentyeh.context.ObjectStreamSerializer"/>
                </hz:serializers>
            </hz:serialization>
        </hz:config>
    </hz:hazelcast>
</beans>